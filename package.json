{
  "name": "hardhat-sdk",
  "version": "1.0.14",
  "main": "dist/index.js",
  "files": [
    "dist"
  ],
  "author": "Jonathan Chow",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/jonathanchowjh/hardhat-sdk.git"
  },
  "keywords": [
    "hardhat",
    "sdk",
    "ethers",
    "ethereum"
  ],
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@openzeppelin/contracts": "^4.8.1",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "eslint": "^8.18.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "hardhat": "^2.12.6",
    "typedoc": "^0.23.24",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "fs": "^0.0.1-security",
    "path": "^0.12.7"
  },
  "scripts": {
    "lint": "eslint .",
    "clean": "rm -rf dist",
    "docs": "typedoc --plugin typedoc-plugin-markdown --out docs utils/main.ts",
    "prebuild": "npm run clean && npm run lint",
    "build": "tsc --module commonjs",
    "preversion": "npm run build && npm run docs",
    "postversion": "git add . && git commit -m 'publish' && git push --follow-tags",
    "version": "npm publish --access public",
    "chain_localhost": "ts-node ./utils/scripts.ts chain_localhost",
    "chain_goerli": "ts-node ./utils/scripts.ts chain_goerli",
    "chain_read": "ts-node ./utils/scripts.ts chain_read",
    "deploy": "ts-node ./scripts/deploy.ts"
  }
